---
const {variant, size} = Astro.props;
---

<button class={variant + " " + size}><slot /></button>


<style>
    button {
        padding: 1rem;
    }

    .primary {
        background-color: antiquewhite;
        color: black;
    }

    .secondary {
        background-color:azure;
        color: #0088ff;
    }

    .tertiary {
        background-color:darkgray;
        color: lightgray;  
    }
    .small {
        font-size: 1rem;
    }

    .medium {
        font-size: 2rem;
    }
    .large {
        font-size: 3rem;
    }
</style>